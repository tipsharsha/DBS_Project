<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div>
    <h1 class="text-4xl text-center text-black p-10">Welcome to the social media App</h1>
  </div>

  
  <div class="w-full  bg-zinc-900 text-white p-10">
    <form method="post" action="http://localhost:3000/signup">
      <input name="user_name" class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-gray-500 mb-4" type="text" placeholder="Username" required>
      <input name="email" class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-gray-500 mb-4" type="email" placeholder="Email" required>
      <input name="bio" class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-gray-500 mb-4" type="text" placeholder="Bio">
      <input name="password" class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-gray-500 mb-4" type="password" placeholder="Password" required>
      <input class="px-3 py-2 rounded-md outline-none bg-blue-500 border-2 border-gray-500" type="submit" value="Create Account">
    </form>
  </div>

  <div class="w-full  bg-zinc-900 text-white p-10">
    <form method="post" action="http://localhost:3000/login">
      <input name="email" class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-gray-500 mb-4" type="email" placeholder="Email" required>
      <input name="password" class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-gray-500 mb-4" type="password" placeholder="Password" required>
      <input class="px-3 py-2 rounded-md outline-none bg-blue-500 border-2 border-gray-500" type="submit" value="Login">
    </form>
  </div>

  <div class="w-full  bg-zinc-900 text-white p-10">
    <form method="post" action="http://localhost:3000/logout">
      <input class="px-3 py-2 rounded-md outline-none bg-blue-500 border-2 border-gray-500" type="submit" value="Logout">
    </form>
  </div>


  

</body>
</html>
