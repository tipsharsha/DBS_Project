<!DOCTYPE html>
<html>
<head>
    <title>User Feed</title>
    <style>
        .post {
            border: 1px solid #ccc;
            margin: 10px;
            padding: 15px;
        }
        .post img {
            max-width: 100%;
        }
        .post video {
            max-width: 100%;
        }
    </style>
</head>
<body>
    <h1>Your Feed</h1>
    
    <% if (posts.length === 0) { %>
        <p>No posts found in your feed. Try following some users!</p>
    <% } else { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <p>Post ID: <%= post.post_id %></p>
                <p>User ID: <%= post.user_id %></p>
                <p>Caption: <%= post.caption %></p>
                <p>Created at: <%= new Date(post.created_at).toLocaleString() %></p>
                
                <% if (post.photo_url) { %>
                    <img src="<%= post.photo_url %>" alt="Post image">
                <% } %>
                
                <% if (post.video_url) { %>
                    <video controls>
                        <source src="<%= post.video_url %>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                <% } %>
            </div>
        <% }); %>
    <% } %>
</body>
</html>